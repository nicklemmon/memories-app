{
  "name": "memories-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "framer-motion": "^1.7.2",
    "parse": "^2.10.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-focus-lock": "^1.19.1",
    "react-helmet": "^5.2.0",
    "react-icons": "^3.0.5",
    "react-outside-click-handler": "^1.3.0",
    "react-query": "^2.26.4",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.3",
    "react-table": "^7.6.3",
    "reset-css": "^3.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:ci": "http-server build -p 3000 -c-1 --silent --cors",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "test:cy:run": "$(npm bin)/cypress run",
    "test:cy:open": "$(npm bin)/cypress open",
    "test:cy:ci": "npm start & wait-on http://localhost:3000 && npm run test:cy:run"
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "cypress": "^6.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-testing-library": "^1.3.4",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "wait-on": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
